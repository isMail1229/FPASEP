<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="id.asep.fpasep.ui.dashboard.MainMenuFragment"
        android:label="MainMenuFragment">
        <action
            android:id="@+id/action_mainMenuFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="id.asep.fpasep.ui.authentication.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="id.asep.fpasep.ui.authentication.register.RegisterFragment"
        android:label="RegisterFragment">
        <action
            android:id="@+id/action_registerFragment_to_registerPhotoFragment"
            app:destination="@id/registerPhotoFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="id.asep.fpasep.ui.dashboard.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="id.asep.fpasep.ui.user.AccountFragment"
        android:label="AccountFragment" />
    <fragment
        android:id="@+id/registerPhotoFragment"
        android:name="id.asep.fpasep.ui.authentication.register.RegisterPhotoFragment"
        android:label="RegisterPhotoFragment">
        <action
            android:id="@+id/action_registerPhotoFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>

    <fragment
        android:id="@+id/splashFragment"
        android:name="id.asep.fpasep.ui.authentication.onboarding.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
</navigation>